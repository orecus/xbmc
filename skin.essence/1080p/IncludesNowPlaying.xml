    <!-- Music NowPlaying Info -->
    <control type="group">
      <posx>0</posx>
      <posy>350</posy>
      <visible>Player.HasAudio + !Skin.HasSetting(homepageMusicinfo)</visible>
      <include>VisibleFadeEffect</include>

      <control type="image">
        <description>Cover image</description>
        <posx>10</posx>
        <posy>68</posy>
        <width>195</width>
        <height>442</height>
        <aspectratio aligny="bottom">keep</aspectratio>
        <texture>$INFO[MusicPlayer.Cover]</texture>
        <bordertexture>sets/Default/RecentAddedBack-focus.png</bordertexture>
        <bordersize>15</bordersize>
      </control>
    
      <control type="label">
        <description>Album Label</description>
        <posx>205</posx>
        <posy>412</posy>
        <height>38</height>
        <width>1500</width>
        <label>$INFO[MusicPlayer.Artist,, - ]$INFO[MusicPlayer.Album]$INFO[musicplayer.discnumber, - $LOCALIZE[427]:]</label>
        <align>left</align>
        <aligny>center</aligny>
        <font>Font_Reg12</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
      </control>
    
      <control type="label">
        <description>Title label</description>
        <posx>205</posx>
        <posy>436</posy>
        <height>45</height>
        <width>1500</width>
        <label>$INFO[MusicPlayer.Title]</label>
        <align>left</align>
        <aligny>center</aligny>
